<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_style"
    android:fillViewport="true"
    android:id="@+id/information"
    tools:context="com.example.zviproject.internetapplication.Information">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:clickable="true"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="150dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Тарифні плани"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <ListView
            android:id="@+id/infoList"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"

            android:layout_weight="1"
            android:background="@drawable/tariffc_style"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />


        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/tariffc_style"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:visibility="visible"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Опис"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="450dp">
                <LinearLayout
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:text="TextView">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tariffCost"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:text="Ціна"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/tariffInfoCost"
                            android:layout_height="match_parent"
                            android:layout_width="1dp"
                            android:layout_weight="2"
                            android:textSize="18dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/tariffConsider"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:layout_width="1dp"
                            android:text="Умови"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/tariffInfoConsider"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="18dp"
                            android:layout_width="30dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tariffDescription"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_width="115dp"
                            android:text="Опис"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />
                        <TextView
                            android:id="@+id/tariffInfoDescription"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:textSize="18dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/infoSurname"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:layout_weight="3"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="TextView"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/infoName"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="TextView"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"

            android:layout_weight="1"
            android:background="@drawable/balance_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="@string/infoBalance"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/infoBalance"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="0dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>
    <include
        layout="@layout/app_bar_left_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_left_navigation"
        app:menu="@menu/activity_left_navigation_drawer" />



</android.support.v4.widget.DrawerLayout>
